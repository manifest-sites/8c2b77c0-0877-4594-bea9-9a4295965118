{
  "name": "Client",
  "type": "object",
  "properties": {
    "userId": {
      "type": "number",
      "description": "Unique identifier for the user who owns the client record"
    },
    "id": {
      "type": "number",
      "description": "Unique identifier for the client"
    },
    "firstName": {
      "type": "string",
      "description": "Client's first name"
    },
    "lastName": {
      "type": "string",
      "description": "Client's last name"
    },
    "email": {
      "type": "string",
      "description": "Client's email address"
    },
    "phone": {
      "type": "string",
      "description": "Client's phone number"
    },
    "company": {
      "type": "string",
      "description": "Client's company or organization name"
    },
    "eventType": {
      "type": "string",
      "description": "Type of event: wedding, funeral, corporate, birthday, anniversary, other"
    },
    "eventDate": {
      "type": "string",
      "description": "Date of the event"
    },
    "status": {
      "type": "string",
      "description": "Client status: prospect, quoted, booked, completed, cancelled"
    },
    "budget": {
      "type": "number",
      "description": "Client's budget for floral arrangements"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes about preferences, requirements, etc."
    },
    "contactDate": {
      "type": "string",
